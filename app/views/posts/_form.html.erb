<div class="popup-new">
  <a class="close fl-r f-fun fz-std">close</a>
  <h1 class="f-fun">Talk About Vegetables</h1>
  <%= form_for :post, url: posts_path, html: { multipart: true } do |f| %>
    <div class="field">
      <%= f.text_field :title, :placeholder => "Title", class: "mb-sm" %>
    </div>

    <div class="field">
      <%= f.text_area :paragraph_one, :placeholder => "Write post...", :rows => "8", class: "span-12-t" %>
    </div>

    <div class="field">
      <%= f.text_area :paragraph_two, :placeholder => "Add more here...", :rows => "8", class: "span-12-t" %>
    </div>

    <div class="filed">
      <%= f.file_field :image %>
    </div>
    <p></p>
    <div>
      <%= f.submit %>
    </div>
    <p></p>
  <% end %>
</div>
